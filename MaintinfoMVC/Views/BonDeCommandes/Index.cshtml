@model IEnumerable<MaintinfoBo.BonDeCommande>

@{
    ViewBag.Title = "Commandes";
}

<h2>Liste Commandes</h2>

<p>
    @Html.ActionLink("Nouveau Bon de Commande", "Create")
</p>
<table class="table table-striped table-hover ">
    <tr>
        <th>
            @*@Html.DisplayNameFor(model => model.ArticleCommande.NomArticle)*@
            Article
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.DateCommande)*@
            Date Commande
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.QuantiteCommande)*@
            Quantité
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.CommandeEffectue)
            Commande effectuée
        </th>*@
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        if (item.CommandeEffectue == true)
        {
        <tr class="success">
            <td>
                @Html.DisplayFor(modelItem => item.ArticleCommande.NomArticle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateCommande)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QuantiteCommande)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.CommandeEffectue)
            </td>*@
          
                <td>@Html.ActionLink("Détails", "Details", new { id = item.NumCommande }) </td>
            
        </tr>
        }
        else
        {
            <tr class="danger">
                <td>
                    @Html.DisplayFor(modelItem => item.ArticleCommande.NomArticle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateCommande)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.QuantiteCommande)
                </td>
                @*<td>
                    @Html.DisplayFor(modelItem => item.CommandeEffectue)
                </td>*@

                <td>
                    @Html.ActionLink("Modifier", "Edit", new { id = item.NumCommande }) |
                    @Html.ActionLink("Détails", "Details", new { id = item.NumCommande }) |
                    @Html.ActionLink("Supprimer", "Delete", new { id = item.NumCommande })
                </td>
                </tr>
                }
                }
</table>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script type="text/javascript">

    </script>
}