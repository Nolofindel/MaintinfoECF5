@model IEnumerable<MaintinfoBo.BonDeCommande>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ArticleCommande.NomArticle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateCommande)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.QuantiteCommande)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CommandeEffectue)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ArticleCommande.NomArticle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateCommande)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QuantiteCommande)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CommandeEffectue)
            </td>
            @if (item.CommandeEffectue == true)
            {
                <td>@Html.ActionLink("Details", "Details", new { id = item.NumCommande }) </td>}
            else
            {
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.NumCommande }) |
                    @Html.ActionLink("Details", "Details", new { id = item.NumCommande }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.NumCommande })
                </td>
            }
        </tr>
    }
</table>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script type="text/javascript">

    </script>
